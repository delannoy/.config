# [alias.*](https://git-scm.com/docs/git-config#Documentation/git-config.txt-alias)

[alias]
    br = branch
    ci = commit
    cfg = config --list --show-origin
    cm = commit --message
    co = checkout
    df = diff --word-diff
    hist = log --all --graph
    st = status --short --branch --show-stash --untracked-files=no
    uncommit = reset --soft HEAD~1 # https://www.geeksforgeeks.org/how-to-delete-local-commit-in-git/#keeping-the-changes-soft-reset
    unstage = restore --staged
